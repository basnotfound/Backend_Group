@model IEnumerable<CoopManagementApp.Models.Customer>

<h2>Customer List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.id_cus</td>
                <td>@customer.name_cus</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.id_cus">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@customer.id_cus">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Customer</a>