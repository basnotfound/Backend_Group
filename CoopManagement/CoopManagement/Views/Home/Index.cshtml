@model CoopManagementApp.Models.HomeViewModel

<h2>Dashboard</h2>

<div class="row">
    <div class="col-md-4">
        <h3>Customers</h3>
        <ul class="list-group">
            @foreach (var customer in Model.Customers)
            {
                <li class="list-group-item">@customer.name_cus</li>
            }
        </ul>
    </div>

    <div class="col-md-4">
        <h3>Products</h3>
        <ul class="list-group">
            @foreach (var product in Model.Products)
            {
                <li class="list-group-item">@product.name_product</li>
            }
        </ul>
    </div>

    <div class="col-md-4">
        <h3>Transactions</h3>
        <ul class="list-group">
            @foreach (var transaction in Model.Transactions)
            {
                <li class="list-group-item">
                    @transaction.Customer.name_cus purchased @transaction.quantity of @transaction.Product.name_product
                    for @transaction.total_price.ToString("C") on @transaction.date_transaction.ToString("dd MMM yyyy")
                </li>
            }
        </ul>
    </div>
</div>